<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :user_id, 'Commenter' %><br>
    <%= f.collection_select :user_id, User.order(:name), :id, :name %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= form_tag("/users", method: "get") do %>
  <h2>Filters:</h2>
  <p>
    <%= label_tag(:name, "Name:") %>
    <%= text_field_tag :name %>
  </p>
  <p>
    <%= label_tag(:email, "Email:") %>
    <%= text_field_tag :email %>
  </p>
  <p>
    <%= label_tag(:birthday, "Birthday:") %>
    <%= date_field_tag :birthday %>
  </p>
  <%= submit_tag("Apply") %>
<% end %>
<br/>



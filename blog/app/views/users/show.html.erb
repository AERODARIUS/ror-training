
<h1>
  <%= @user.name %>
</h1>
 
<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
 
<p>
  <strong>Birthday:</strong>
  <%= @user.birthday %>
</p>
 
 
<% if @user.articles.any? %>
  <h2>Articles</h2>
  <%= render @articles %>
<% end %>
 
<% if @user.comments.any? %>
  <h2>Comments</h2>
  <%= render @comments %>
<% end %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
